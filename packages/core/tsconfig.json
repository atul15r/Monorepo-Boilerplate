{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "WebWorker", "WebWorker.ImportScripts"],
    "baseUrl": "src",
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": ["./node_modules/@types"],
  "include": ["src", "test"],
  "exclude": ["node_modules", "**/*.spec.ts", "build", "test"]
}
